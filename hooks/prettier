#!/usr/bin/env bash

process_file() {
	if ! is_accepted_file "$1"; then
		[[ -n "$PRE_COMMIT_DEBUG" ]] && printf "prettier skipped %s\n" "$1"
		return 0
	fi

	# fixers
	if ! command -v npx >/dev/null 2>&1; then
		printf "ERROR: npx missing\n"
		return 1
	fi
	if ! npx prettier --write "$1"; then
		printf "ERROR: prettier failed on %s\n" "$1"
		return 1
	fi

	# fixers - end
	git add "$1"

	return 0
}

is_accepted_file() {
	if [[ "$1" =~ \.(html|js|json|md|tomj|ts|xml)$ ]]; then
		return 0
	else
		return 1
	fi
}

process_file "$1"
exit $?
