#!/usr/bin/env bash

here=$(readlink -f "$0")
here=$(dirname "$here")
target="$here/.git/hooks/pre-commit"

if [ -L "$target" ]; then
	printf "Uninstalling pre-commit hooks from:\n    %s\n" "$target"
	rm "$target"
else
	printf "No pre-commit hooks are currently installed at:\n    %s\n" "$target"
fi
